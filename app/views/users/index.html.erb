<div class="d-flex justify-content-between mt-4">
  <h1 class="mt-1 h4">Users</h1>
  <div class="text-end">
    <%= link_to users_invitations_path, class: "btn btn-outline-secondary" do %>
      Pending invitations
      <span class="badge text-bg-secondary"><%= @total_pending_invitations %></span>
    <% end if @total_pending_invitations.present? %>
    <%= link_to "Invite user", new_users_invitation_path, class: "btn btn-outline-primary" %>
  </div>
</div>
<hr>

<div id="users">
  <table class="table table-hoverable align-middle">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th class="text-end"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, user_path(user) %>
          </td>
          <td><%= user.email %></td>
          <td class="text-end">
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Edit", edit_user_path(user), class: 'dropdown-item' %>
                </li>
                <li>
                  <%= button_to "Destroy", user, form: {
                    class: 'dropdown-item p-0'
                  }, method: :delete, class: 'btn btn-link text-decoration-none text-danger' %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
