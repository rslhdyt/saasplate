<%= form_with(model: @user_company, url: users_invitation_path(@user_company)) do |form| %>
  <div class="mb-3 row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, value: @user_company.user_name, class: "form-control-plaintext", readonly: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, value: @user_company.user_email, class: "form-control-plaintext", readonly: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :invited_at, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :invited_at, value: app_date(@user_company.invitation_created_at), class: "form-control-plaintext", readonly: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :status, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :status, value: @user_company.invitation_not_accepted? ? "waiting confirmation" : "", class: "form-control-plaintext", readonly: true %>
    </div>
  </div>
<% end %>