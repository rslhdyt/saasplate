<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="text-center mb-4">
        <img class="mb-4" src="https://via.placeholder.com/150" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Complete your business details</h1>
      </div>

      <!-- Step 4: Create a card with a grey background for the login form -->
      <!-- Add the following code to the new.html.erb file -->
      <div class="card bg-light mb-4">
        <div class="card-body pb-4">
          <!-- Step 5: Add the login form to the card -->
          <!-- Add the following code to the new.html.erb file -->
          <%= form_for(@company, url: company_registration_path) do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Create Company", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
