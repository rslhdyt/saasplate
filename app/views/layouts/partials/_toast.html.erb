<% flash.each do |flash_type, message| %>
  <%
    if flash_type == 'notice'
      flash_type = 'success'
    end

    if flash_type == 'alert'
      flash_type = 'warning'
    end
    
    if flash_type == 'recaptcha_error'
      flash_type = 'danger'
    end
  %>
  <div class="toast-container top-0 start-50 translate-middle-x mt-3">
    <div data-controller="toast" data-bs-delay="3000" class="toast hide text-bg-<%= flash_type %>" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= message %>
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="toast-container top-0 start-50 translate-middle-x mt-3">
    <div data-bs-delay="3000" class="toast show text-bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= alert %>
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>