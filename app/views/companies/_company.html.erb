<%= form_with(model: @company, url: company_path(@company)) do |form| %>
  <div class="mb-3 row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control-plaintext", readonly: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control-plaintext", readonly: true %>
    </div>
  </div>
<% end %>